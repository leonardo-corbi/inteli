<div class="fade-in">
    <!-- Header da página -->
    <div class="d-flex justify-between items-center mb-4">
        <div>
            <h2 style="margin: 0; color: var(--gray-900);">Gerenciar Salas</h2>
            <p style="margin: 0.5rem 0 0; color: var(--gray-600);">Visualize e gerencie todas as salas disponíveis</p>
        </div>
        <a href="/rooms/create" class="btn btn-primary">
            <i data-lucide="plus" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
            Nova Sala
        </a>
    </div>
    
    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="/rooms" class="row">
                <div class="col-4">
                    <label class="form-label">Buscar por nome</label>
                    <input type="text" name="search" class="form-control" placeholder="Digite o nome da sala..." value="<%= typeof req !== 'undefined' && req.query.search ? req.query.search : '' %>">
                </div>
                <div class="col-3">
                    <label class="form-label">Capacidade mínima</label>
                    <input type="number" name="capacity" class="form-control" placeholder="Ex: 10" value="<%= typeof req !== 'undefined' && req.query.capacity ? req.query.capacity : '' %>">
                </div>
                <div class="col-3">
                    <label class="form-label">Localização</label>
                    <input type="text" name="location" class="form-control" placeholder="Ex: Andar 1" value="<%= typeof req !== 'undefined' && req.query.location ? req.query.location : '' %>">
                </div>
                <div class="col-2 d-flex items-end">
                    <button type="submit" class="btn btn-secondary" style="width: 100%;">
                        <i data-lucide="search" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
                        Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Lista de Salas -->
    <% if (rooms && rooms.length > 0) { %>
        <div class="row">
            <% rooms.forEach(room => { %>
                <div class="col-4 mb-4">
                    <div class="card" style="height: 100%;">
                        <div class="card-header">
                            <div class="d-flex justify-between items-center">
                                <h3 class="card-title" style="margin: 0; color: var(--primary-blue);"><%= room.nome %></h3>
                                <span class="badge badge-info">ID: <%= room.id %></span>
                            </div>
                        </div>
                        <div class="card-body" style="flex: 1;">
                            <div class="mb-3">
                                <div style="display: flex; align-items: center; margin-bottom: 0.75rem;">
                                    <i data-lucide="map-pin" style="width: 16px; height: 16px; margin-right: 0.5rem; color: var(--gray-500);"></i>
                                    <span style="color: var(--gray-700); font-weight: 500;"><%= room.localizacao %></span>
                                </div>
                                <div style="display: flex; align-items: center; margin-bottom: 0.75rem;">
                                    <i data-lucide="users" style="width: 16px; height: 16px; margin-right: 0.5rem; color: var(--gray-500);"></i>
                                    <span style="color: var(--gray-700);">Capacidade: <strong><%= room.capacidade %> pessoas</strong></span>
                                </div>
                            </div>
                            
                            <% if (room.recursos) { %>
                                <div class="mb-3">
                                    <h5 style="font-size: 0.875rem; font-weight: 600; color: var(--gray-700); margin-bottom: 0.5rem;">Recursos:</h5>
                                    <p style="font-size: 0.8rem; color: var(--gray-600); line-height: 1.4; margin: 0;"><%= room.recursos %></p>
                                </div>
                            <% } %>
                            
                            <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid var(--gray-200);">
                                <div style="font-size: 0.75rem; color: var(--gray-500);">
                                    Criada em: <span class="format-date"><%= room.created_at %></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex gap-2">
                                <a href="/rooms/<%= room.id %>" class="btn btn-secondary btn-sm" style="flex: 1;">
                                    <i data-lucide="eye" style="width: 14px; height: 14px; margin-right: 0.25rem;"></i>
                                    Ver Detalhes
                                </a>
                                <a href="/rooms/<%= room.id %>/edit" class="btn btn-primary btn-sm" style="flex: 1;">
                                    <i data-lucide="edit" style="width: 14px; height: 14px; margin-right: 0.25rem;"></i>
                                    Editar
                                </a>
                                <form method="POST" action="/rooms/<%= room.id %>/delete" style="display: inline;" onsubmit="return confirmDelete('Tem certeza que deseja excluir a sala <%= room.nome %>?')">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <!-- Estatísticas -->
        <div class="card mt-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-3">
                        <div style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 700;"><%= rooms.length %></div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Total de Salas</div>
                    </div>
                    <div class="col-3">
                        <div style="color: var(--success); font-size: 1.5rem; font-weight: 700;">
                            <%= rooms.reduce((sum, room) => sum + room.capacidade, 0) %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Capacidade Total</div>
                    </div>
                    <div class="col-3">
                        <div style="color: var(--warning); font-size: 1.5rem; font-weight: 700;">
                            <%= Math.round(rooms.reduce((sum, room) => sum + room.capacidade, 0) / rooms.length) %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Capacidade Média</div>
                    </div>
                    <div class="col-3">
                        <div style="color: var(--info); font-size: 1.5rem; font-weight: 700;">
                            <%= [...new Set(rooms.map(room => room.localizacao.split(' - ')[0]))].length %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Localizações</div>
                    </div>
                </div>
            </div>
        </div>
        
    <% } else { %>
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i data-lucide="building" class="empty-state-icon"></i>
                    <h3>Nenhuma sala encontrada</h3>
                    <p>Não há salas cadastradas no sistema ou nenhuma sala corresponde aos filtros aplicados.</p>
                    <a href="/rooms/create" class="btn btn-primary">
                        <i data-lucide="plus" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
                        Cadastrar Primeira Sala
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>

<script>
    // Filtro em tempo real
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.querySelector('input[name="search"]');
        if (searchInput) {
            let timeout;
            searchInput.addEventListener('input', function() {
                clearTimeout(timeout);
                timeout = setTimeout(() => {
                    // Auto-submit form after 500ms of no typing
                    if (this.value.length >= 3 || this.value.length === 0) {
                        this.form.submit();
                    }
                }, 500);
            });
        }
    });
</script>

