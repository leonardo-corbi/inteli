<div class="fade-in">
    <!-- Header da página -->
    <div class="d-flex justify-between items-center mb-4">
        <div>
            <h2 style="margin: 0; color: var(--gray-900);">Gerenciar Usuários</h2>
            <p style="margin: 0.5rem 0 0; color: var(--gray-600);">Visualize e gerencie todos os usuários do sistema</p>
        </div>
        <a href="/users/create" class="btn btn-primary">
            <i data-lucide="user-plus" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
            Novo Usuário
        </a>
    </div>
    
    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="/users" class="row">
                <div class="col-4">
                    <label class="form-label">Buscar</label>
                    <input 
                        type="text" 
                        name="search" 
                        class="form-control" 
                        placeholder="Nome, email ou matrícula..."
                        value="<%= search %>"
                    >
                </div>
                <div class="col-3">
                    <label class="form-label">Tipo</label>
                    <select name="tipo" class="form-control form-select">
                        <option value="">Todos os tipos</option>
                        <option value="admin" <%= selectedTipo === 'admin' ? 'selected' : '' %>>Administrador</option>
                        <option value="usuario" <%= selectedTipo === 'usuario' ? 'selected' : '' %>>Usuário</option>
                    </select>
                </div>
                <div class="col-3 d-flex items-end">
                    <button type="submit" class="btn btn-secondary" style="width: 100%;">
                        <i data-lucide="search" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
                        Buscar
                    </button>
                </div>
                <div class="col-2 d-flex items-end">
                    <a href="/users" class="btn btn-outline-secondary" style="width: 100%;">
                        <i data-lucide="x" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
                        Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Lista de Usuários -->
    <% if (users && users.length > 0) { %>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Matrícula</th>
                        <th>Tipo</th>
                        <th>Data Cadastro</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <span style="font-weight: 600; color: var(--primary-blue);">#<%= user.id %></span>
                            </td>
                            <td>
                                <div>
                                    <div style="font-weight: 500; color: var(--gray-900);"><%= user.nome %></div>
                                </div>
                            </td>
                            <td>
                                <div style="color: var(--gray-700);">
                                    <i data-lucide="mail" style="width: 14px; height: 14px; margin-right: 0.25rem; display: inline;"></i>
                                    <%= user.email %>
                                </div>
                            </td>
                            <td>
                                <span class="badge badge-secondary"><%= user.matricula %></span>
                            </td>
                            <td>
                                <span class="badge badge-<%= user.tipo === 'admin' ? 'primary' : 'info' %>">
                                    <i data-lucide="<%= user.tipo === 'admin' ? 'shield' : 'user' %>" style="width: 12px; height: 12px; margin-right: 0.25rem; display: inline;"></i>
                                    <%= user.tipo === 'admin' ? 'Administrador' : 'Usuário' %>
                                </span>
                            </td>
                            <td>
                                <div style="color: var(--gray-600); font-size: 0.875rem;">
                                    <span class="format-date"><%= user.created_at %></span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a href="/users/<%= user.id %>" class="btn btn-secondary btn-sm" title="Ver detalhes">
                                        <i data-lucide="eye" style="width: 14px; height: 14px;"></i>
                                    </a>
                                    <a href="/users/<%= user.id %>/edit" class="btn btn-primary btn-sm" title="Editar">
                                        <i data-lucide="edit" style="width: 14px; height: 14px;"></i>
                                    </a>
                                    <% if (user.tipo !== 'admin') { %>
                                        <form method="POST" action="/users/<%= user.id %>/delete" style="display: inline;" onsubmit="return confirmDelete('Tem certeza que deseja excluir este usuário?')">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Excluir">
                                                <i data-lucide="trash-2" style="width: 14px; height: 14px;"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        
        <!-- Estatísticas -->
        <div class="row mt-4">
            <div class="col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div style="color: var(--primary-blue); font-size: 1.5rem; font-weight: 700;">
                            <%= users.length %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Total de Usuários</div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div style="color: var(--success); font-size: 1.5rem; font-weight: 700;">
                            <%= users.filter(u => u.tipo === 'admin').length %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Administradores</div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div style="color: var(--info); font-size: 1.5rem; font-weight: 700;">
                            <%= users.filter(u => u.tipo === 'usuario').length %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Usuários Comuns</div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <div style="color: var(--warning); font-size: 1.5rem; font-weight: 700;">
                            <%= users.filter(u => {
                                const today = new Date();
                                const userDate = new Date(u.created_at);
                                const diffTime = Math.abs(today - userDate);
                                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                                return diffDays <= 30;
                            }).length %>
                        </div>
                        <div style="color: var(--gray-600); font-size: 0.875rem;">Novos (30 dias)</div>
                    </div>
                </div>
            </div>
        </div>
        
    <% } else { %>
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i data-lucide="users" class="empty-state-icon"></i>
                    <h3>Nenhum usuário encontrado</h3>
                    <p>Não há usuários cadastrados no sistema ou nenhum usuário corresponde aos filtros aplicados.</p>
                    <a href="/users/create" class="btn btn-primary">
                        <i data-lucide="user-plus" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
                        Cadastrar Primeiro Usuário
                    </a>
                </div>
            </div>
        </div>
    <% } %>
    
    <!-- Ações Rápidas -->
    <div class="card mt-4">
        <div class="card-header">
            <h3 class="card-title">
                <i data-lucide="zap" style="width: 20px; height: 20px; margin-right: 0.5rem; display: inline;"></i>
                Ações Rápidas
            </h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <a href="/users/create" class="btn btn-primary" style="width: 100%; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i data-lucide="user-plus" style="width: 20px; height: 20px; margin-right: 0.5rem;"></i>
                        Novo Usuário
                    </a>
                </div>
                <div class="col-3">
                    <a href="/users?tipo=admin" class="btn btn-secondary" style="width: 100%; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i data-lucide="shield" style="width: 20px; height: 20px; margin-right: 0.5rem;"></i>
                        Ver Admins
                    </a>
                </div>
                <div class="col-3">
                    <a href="/users?tipo=usuario" class="btn btn-secondary" style="width: 100%; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i data-lucide="user" style="width: 20px; height: 20px; margin-right: 0.5rem;"></i>
                        Ver Usuários
                    </a>
                </div>
                <div class="col-3">
                    <a href="/reservations" class="btn btn-secondary" style="width: 100%; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i data-lucide="calendar" style="width: 20px; height: 20px; margin-right: 0.5rem;"></i>
                        Ver Reservas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Formatação de datas
    document.addEventListener('DOMContentLoaded', function() {
        const dateElements = document.querySelectorAll('.format-date');
        dateElements.forEach(element => {
            const date = new Date(element.textContent);
            element.textContent = date.toLocaleDateString('pt-BR');
        });
    });
</script>

